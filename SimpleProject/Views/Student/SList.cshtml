@using SimpleProject.ViewModels;
@using SimpleProject.Models;
@model StudentWithCount;



<html>
    <head>
        
    </head>
    <body>
        <table class="table table-striped table-dark">
          <thead>
            <tr>
              <th scope="col">First Name</th>
              <th scope="col">Last Name</th>
              <th scope="col">Age</th>
              <th scope="col">Team Name</th>
            </tr>
          </thead>
            <tbody>
                
            @foreach(var student in Model.students)
            {
              
                <tr>
                     <td><a asp-controller="Student" asp-action="Details" asp-route-id="@student.StudentID">@student.FirstName</a></td>
                    <td>@student.LastName</td>
                    <td>@student.Age </td>
                    <td>@student.TeamName</td>
                </tr>                  

            }  
            </tbody>
        </table>
         <h2> Total students: @ViewBag.CountS </h2>
         <h3> Total students:- @Model.count </h3>
    </body>
</html>

